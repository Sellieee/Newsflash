<body class="background-image" id="saved-page">
   <div class="container">
      <h3 id="saved">Saved Articles</h3>
      {{#each article}}
      <div class="card">
         <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <a href={{this.link}} target="_blank" class="card-link"><i class="far fa-newspaper"></i>Technology
               Articles</a>
            <br>
            <p class="card-text">Article Summary: {{this.summary}}
            </p>
            <br>
            <button type="button" class="btn btn-success addNote" data-toggle="modal"
               data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
            <button type="button" class="btn btn-danger deleteNote" data-id={{this._id}}>Delete this Note</button>
         </div>
      </div>
      {{/each}}
   </div>
</body>